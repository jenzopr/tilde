# Cask
tap caskroom/cask
tap caskroom/versions

# Editor
cask install atom

# R
brew install r --with-openblas
defaults write org.R-project.R force.LANG en_GB.UTF-8

# Misc
brew cask install mactex texmaker
cask install spotify

# Post-bundle cleanup
cleanup
